<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Artista (Ejemplo)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_artist_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Género: Pop (Ejemplo)"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tv_artist_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="País: Colombia (Ejemplo)"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tv_artist_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción: Este es un ejemplo de descripción del artista..."
        android:layout_marginBottom="4dp" />

</LinearLayout>
