<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_album_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título del Álbum (Ejemplo)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_album_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artista: Nombre del Artista (Ejemplo)"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tv_album_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Año: 2024 (Ejemplo)"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tv_album_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Género: Pop (Ejemplo)"
        android:layout_marginBottom="4dp" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reproducir" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pausa" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detener" />


</LinearLayout>
